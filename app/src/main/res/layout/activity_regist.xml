<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context="com.example.woodson.loginandgetinfo.MainView.Regist">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#b5cade">
        <ImageView
            android:src="@drawable/icon_back_focus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="#31739e"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:background="#fff"


        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="用户名："
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <EditText

            android:id="@+id/getusername"
            android:layout_marginLeft="15dp"
            android:hint="请填写用户名"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"

      android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="密码："
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/getupassword"
            android:layout_marginLeft="15dp"
            android:hint="请填写密码"
            android:background="@null"
            android:layout_weight="0.91"
            android:layout_width="0dp"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="2dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_marginLeft="10dp"

            android:textSize="18dp"
            android:text="重复密码："
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/getrepwd"
            android:layout_marginLeft="15dp"
            android:hint="请填重复密码"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />
    </LinearLayout>
    <Button
        android:id="@+id/regist"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="注册"
        android:background="@drawable/btn_blue_normal"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
</LinearLayout>
