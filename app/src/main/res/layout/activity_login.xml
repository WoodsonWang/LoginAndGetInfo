<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context="com.example.woodson.loginandgetinfo.MainView.LoginActivity">

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#b5cade">
    <ImageView
        android:src="@drawable/icon_back_focus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
       android:layout_centerInParent="true"
        android:gravity="center"
        android:text="学生信息"
        android:textSize="20sp"
        android:textColor="#31739e"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:text="用户登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_user"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="用户名称:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/getusername"
            android:layout_marginLeft="15dp"
            android:hint="请输入您的用户名"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_pwd"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="登录密码:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/getpwd"
            android:layout_marginLeft="15dp"
            android:hint="请输入您的密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp">

        <CheckBox


            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="自动登录"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/regist"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="注册&gt;&gt;"
            android:textColor="#31739e" />
    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_blue_normal"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:layout_width="100dp"
        android:layout_height="40dp" />

</LinearLayout>
